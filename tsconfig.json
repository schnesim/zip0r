{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "files": [
    "./src/main.ts",
    "./src/app.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
